<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXTextField?>
<?import drawing.Graph?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/graph.css" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.GraphController">
    <center>
        <Graph>
            <BorderPane.margin>
                <Insets topRightBottomLeft="10" />
            </BorderPane.margin>
        </Graph>
    </center>
    <right>
        <VBox spacing="30">
            <BorderPane.margin>
                <Insets topRightBottomLeft="20" />
            </BorderPane.margin>
            <HBox>
                <Label styleClass="text">x-min:</Label>
                <JFXTextField styleClass="text" fx:id="xMin" />

                <Label styleClass="text">x-max: </Label>
                <JFXTextField styleClass="text" fx:id="xMax" />
            </HBox>
            <HBox>
                <Label styleClass="text">f(x) =</Label>
                <JFXTextField fx:id="functionInput" prefWidth="360.0" styleClass="text" onAction="#addFunction"/>
            </HBox>
        </VBox>
    </right>
</BorderPane>
